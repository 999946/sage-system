<!DOCTYPE html>
<html>
<!--
#set(components = ['bootstrap', 'layout', 'user'])
#set(Collection<HotTopic> hotTopics)
-->
<head>
  <meta charset="UTF-8">
  <title>浏览一下</title>
  $!{allcss}
  <style>
    #container{
      background: #e0e0e0;
    }
    #welcome-login{
      margin: 20px;
      padding: 5px;
      background-color: beige;
      max-width: 220px;
      border-radius: 5px;
    }
    .group_name{
      margin-left: 1em;
      margin-right: 1em;
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
<div id="container" class="container">
  <div id="welcome-login">
    加入这里，看更多内容 <a class="btn btn-default btn-success" href="/register">加入</a>
  </div>
  #for(ht : hotTopics)
  <div class="topic">
    <a class="title" href="/topics/${ht.topic.id}">${ht.topic.title}</a>
    <p class="summary">${ht.topic.summary}</p>
    $!{include("user-label.httl", ["u": ht.topic.author])}
    $!{spanHumanTime(ht.topic.whenCreated)}
    #if(ht.replyCount > 0) <span>${ht.replyCount}回复</span>#end
  </div>
  #end
</div>
$!{includeProto}
$!{alljs}
</body>
</html>