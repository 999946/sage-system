<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout", "tag"])
#set(GroupPreview group)
#set(Collection<BlogPreview> topics)
<head>
  <meta charset="UTF-8">
  <title>{${group.name}}小组 - 紫月空</title>
  $!{includeCSS()}
  <style>
    .topic{
      background: #f0f0f0
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
  <div id="container" class="container">
    <div class="group">
      <p>${group.name}</p>
      介绍: <p>${group.introduction}</p>
      #for(tag : group.tags)
       $!{include("tag-label.httl")}
      #end
    </div>
    #for(topic : topics)
      <div class="topic">
        <a href="/topic/${topic.id}">${topic.title}</a>
        <p>${topic.preview}</p>
        <a>${topic.author.name}</a>
        <span>${topic.createdTime.format("yyyy-MM-dd HH:mm:ss")}</span>
      </div>
    #end
  </div>
$!{includeProto}
$!{includeJS()}
</body>
</html>