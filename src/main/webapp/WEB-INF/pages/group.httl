<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout", "tag", "user"])
#set(GroupPreview group)
#set(Collection<TopicPreview> topics)
<head>
  <meta charset="UTF-8">
  <title>{${group.name}}小组 - 紫月空</title>
  $!{includeCSS()}
  <style>
    .group{
      margin-top: 15px;
      padding: 5px;
      background: #e0e0e0;
    }
    .btn-write-post{
      margin: 10px;
    }
    .topic{
      /*margin-top: 10px;*/
      padding: 5px;
      background: #e0e0e0;
      border-bottom: 1px solid #aaa;
    }
    .topic .title{
      font-weight: bold;
      font-size: 1.1em;
      color: #256DAB;
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
  <div id="container" class="container">
    <div class="group">
      <p>${group.name}</p>
      <p>介绍: ${group.introduction}</p>
      <div>创建者: $!{include("user-label.httl", ["u": group.creator])}</div>
      <div>成员数: ${group.membersCount}</div>
      标签：
      #for(each : group.tags)
       $!{include("tag-label.httl")}
      #end
    </div>
    <a class="btn-write-post btn btn-primary btn-sm" href="/write-blog?groupId=${group.id}">发表文章!</a>
    #for(topic : topics)
      <div class="topic">
        <a class="title" href="/topic/${topic.id}">${topic.blog.title}</a>
        <p class="summary">${topic.blog.summary}</p>
        $!{include("user-label.httl", ["u": topic.blog.author])}
        <span>${humanTime(topic.blog.createdTime)}</span>
      </div>
    #end
  </div>
$!{includeProto}
$!{includeJS()}
</body>
</html>