<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout", "tag", "user"])
#set(GroupPreview group)
#set(Collection<GroupTopicPreview> topics)
<head>
  <meta charset="UTF-8">
  <title>{${group.name}}小组 - 紫月空</title>
  $!{includeCSS()}
  <style>
    .topic{
      background: #f0f0f0
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
  <div id="container" class="container">
    <div class="group">
      <p>${group.name}</p>
      介绍: <p>${group.introduction}</p>
      创建者: $!{include("user-label.httl", ["u": group.creator])}
      成员数: <div>${group.membersCount}</div>
      #for(each : group.tags)
       $!{include("tag-label.httl")}
      #end
    </div>
    <a class="btn btn-primary btn-sm" href="/write-blog?groupId=${group.id}">发表文章!</a>
    #for(topic : topics)
      <div class="topic">
        <a href="/topic/${topic.id}">${topic.blog.title}</a>
        <p>${topic.blog.preview}</p>
        $!{include("user-label.httl", ["u": topic.blog.author])}
        <span>${humanTime(topic.blog.createdTime)}</span>
      </div>
    #end
  </div>
$!{includeProto}
$!{includeJS()}
</body>
</html>