<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout"])
#set(Group group)
#set(Tag tag)
#set(Collection<BlogPreview> topics)
<head>
  <meta charset="UTF-8">
  <title>{${group.name}}小组</title>
  $!{includeCSS()}
  <style>
    .topic{
      background: #f0f0f0
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
  <div id="container" class="container">
    <div class="group">
      <p>${group.introduction}</p>
      #for(tag : group.tags)
       <span>${tag.name}</span>
      #end
    </div>
    #for(topic : topics)
      <div class="topic">
        <a href="/topic/${topic.id}">${topic.title}</a>
        <p>${topic.preview}</p>
        <a>${topic.author.name}</a>
        <span>${topic.createdTime.format("yyyy-MM-dd HH:mm:ss")}</span>
      </div>
    #end
  </div>
</body>
</html>