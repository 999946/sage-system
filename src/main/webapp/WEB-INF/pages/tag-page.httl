<!DOCTYPE html>
<html>
<!--
#set(Tag tag)
#set(Integer countPendingRequestsOfTag, Integer countPendingRequestsOfTagScope)
#set(Collection<TopicPreview> topics, Collection<BlogPreview> blogs)
#set(Collection coreTags, Collection nonCoreTags, Collection relatedTags, Collection sameNameTags)
-->
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>${tag.name} - 轻境界</title>
  $!{allcss}
  <style>
    .side > div, #bkg-intro{
      min-height: 50px;
      margin: 2px;
      padding: 5px;
      background-color: #e5e5e5;
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}

<div class="container" id="container">
	<div id="chain"></div>
	<div class="row" style="margin-top:50px">
		<div class="side">
      <div class="parallel-links">
        <div>
          <a href="/tag-changes/${tag.id}/scope">修改申请(范围内)</a>
          #if(countPendingRequestsOfTagScope > 0)[${countPendingRequestsOfTagScope}]#end
        </div>
        <div>
          <a href="/tag-changes/${tag.id}">修改申请(仅本标签)</a>
          #if(countPendingRequestsOfTag > 0)[${countPendingRequestsOfTag}]#end
        </div>
      </div>
      <div>子标签
        <div>
          #for(each : coreTags)
            $!{tagLabel(each)}
          #end
        </div>
        <hr style="margin: 5px;"/>
        <div>
          #for(each : nonCoreTags)
            $!{tagLabel(each)}
          #end
        </div>
      </div>
      #if(relatedTags)
      <div>关联标签
        <div>
          #for(each : sameNameTags)
            $!{tagLabel(each)}
          #end
        </div>
      </div>
      #end
      #if(sameNameTags)
      <div>同名标签
        <div>
          #for(each : sameNameTags)
            $!{tagLabel(each)}
          #end
        </div>
      </div>
      #end
		</div>
		<div class="main">
		  <div id="bkg-intro" class="row" style="text-align:center;padding:10px">${tag.intro == null ? "没有背景介绍" : tag.intro}</div>
      <div class="topic-list">
        <h2 class="heading-hot">帖子精选</h2>
        <a class="btn-write-topic btn btn-primary btn-sm" href="/topics/new?belongTagId=${tag.id}">发帖!</a>
        #for(topic : topics)
          $!{include("topic-preview.httl")}
        #end
      </div>
      <div class="blog-list">
        <h2 class="heading-hot">博客精选</h2>
        #for(blog : blogs)
          $!{include("blog-preview.httl")}
        #end
      </div>
			<div class="stream">
				<div class="slist"></div>
			</div>
		</div>
	</div>
	<div class="footer"></div>
</div>
$!{includeProto}
$!{alljs}
<script type="text/javascript">
setup(humanTime_setup, tag_setup, stream_setup, user_setup)
$(document).ready(function(){
  $('.summary').warnEmpty().each(function(){
    $(this).html(marked($(this).text()))
  })

	var tagId = window.frontMap.id
	getStream('/read/tag/' + tagId)
	getTagChain(tagId, $('#chain'));
});
</script>
</body>
</html>