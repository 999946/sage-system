<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout", "tag", "user"])
#set(UserSelf userSelf)
#set(Collection<ConversationPreview> conversations)
<head>
  <meta charset="UTF-8">
  <title>私信列表</title>
  $!{includeCSS()}
  <style>
    .conversation-header, .msg-body{
      float: left;
      margin-left: 10px;
    }
    .conversation-preview:after{
      clear: both;
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
<div id="container" class="container">
  <div id="conversation-list">
    #for(conv : conversations)
      <div class="conversation-preview">
        <div class="conversation-header">
          $!{include("user-label.httl", ["u": conv.withUser])}
          #if(conv.lastMsg.fromUser == conv.self.id)
            我：
          #end
        </div>
        <div class="msg-body">
          <span class="msg-time">${humanTime(conv.lastMsg.time)}</span>
          <div class="msg-content">${conv.lastMsg.content}</div>
        </div>
      </div>
    #end
  </div>
</div>
$!{includeProto}
$!{includeJS()}
</body>
</html>