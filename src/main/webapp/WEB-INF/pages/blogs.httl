<!DOCTYPE html>
<html>
<!--
#set(List<BlogPreview> blogs)
-->
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title>博客列表</title>
  $!{allcss}
</head>
<body>
$!{include("navbar.httl")}
<div class="container" id="container">
  <div class="blog-list">
    #for(blog : blogs)
      $!{include("blog-preview.httl")}
    #end
  </div>
</div>
$!{alljs}
<script type="text/javascript">
  console.log('blog-id: ' + $('#id').text());
  setup(stream_setup, humanTime_setup, tag_setup, user_setup)
  $(document).ready(function() {
    $('.summary').warnEmpty().each(function(){
      $(this).html(marked($(this).text()))
    })

    getStream('/read/connect/'+$('#id').text()).done(function(){
      $('.newfeed').remove()
      $('.oldfeed').remove()
    })
  })
</script>
</body>
</html>