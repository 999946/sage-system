<!DOCTYPE html>
<html>
<!--
#set(BlogView blog, List<TweetView> tweets)
#set(UserSelf userSelf)
-->
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<title>${blog.title}</title>
	$!{allcss}
	<style type="text/css">
	#container{
		background-color: #F0F0F0;
	}
	.title, .content, .tweets{
		border: 1px solid #eee;
	}
	</style>
</head>
<body>
$!{include("navbar.httl")}
<div class="container" id="container">
	<div class="blog">
		<span id="id" style="display:none">$!{blog.id}</span>
		<h3 class="title">${blog.title}</h3>
		$!{include("user-label.httl", ["u": blog.author])}
		发表于 $!{spanHumanTime(blog.createdTime)}
		#if(blog.modifiedTime)
		修改于 $!{spanHumanTime(blog.modifiedTime)}
		#end
		#if(userSelf.id == blog.author.id)
		<a href="/blogs/$!{blog.id}/edit">编辑</a>
		#end
		<div class="tags">
			#for(each : blog.tags)
				$!{include("tag-label.httl")}
			#end
		</div>
		<div class="content">${blog.content}</div>
	</div>
	<h5>连接到的微博：</h5>
	<div class="stream">
	   <div class="slist"></div>
	</div>
</div>
$!{alljs}
<script type="text/javascript">
	console.log('blog-id: ' + $('#id').text());
	setup(stream_setup, humanTime_setup, tag_setup, user_setup)
	$(document).ready(function() {
		var $content = $('.content').warnEmpty();
		$content.html(marked($content.text()));

		getStream('/read/connect/'+$('#id').text())
				.done(function(){
						$('.newfeed').remove();
						$('.oldfeed').remove();
				});
	})
</script>
</body>
</html>