<!DOCTYPE html>
<html>
<!--
#set(components = ["bootstrap", "layout", "tag", "user"])
#set(UserSelf self, UserLabel owner)
#set(Collection<FollowList> followLists, Collection<ResourceList> resourceLists)
-->
<head>
  <meta charset="UTF-8">
  <title>${owner.name}的所有列表</title>
  $!{includeCSS()}
  <style>
    .finfo{
      margin-top: 10px;
    }
    .finfo-tags{
      display: inline-block;
      margin-left: 10px;
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
<div id="container" class="container">
  #if(self.id == owner.id)
  <button id="btn_expose_all" class="btn btn-sm">展示我的所有关注</button>
  #end

  #if(followLists)
  <p>关注列表:</p>
  #for(fs : followLists)
    $!{include("follow-list.httl")}
  #end
  #end

  #if(resourceLists)
  <p>资源列表:</p>
  #for(rs : resourceLists)
    $!{include("resource-list.httl")}
  #end
  #end
</div>
$!{includeProto}
$!{includeJS()}
<script>
  $('#btn_expose_all').click(function(){
    var $this = $(this)
    $.post('/list/follow/expose-all')
  }).done(function(resp){
    tipover($this, '操作成功(id: '+resp+')', 1000)
  }).fail(function(resp){
    tipover($this, '操作遇到问题', 1000)
  })
</script>
</body>
</html>