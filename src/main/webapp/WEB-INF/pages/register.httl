<body class="background-dark">

  <div class="g-c">
    <div class="g-r">
      <div class="g-6">
        <form class="u-form" action="/auth/register" method="post">
          <h5 class="heading">注册一个轻境界账户</h5>
          <div class="u-field">
            <label class="label" for="email">邮箱</label>
            <input id="email" name="email" type="text" placeholder="请输入您的邮箱" />
          </div>
          <div class="u-field">
            <label class="label" for="password">密码</label>
            <input id="password" name="password" type="password" placeholder="请输入密码" />
          </div>
          <div class="u-field">
            <label class="label" for="repeat-password">再次输入密码</label>
            <input id="repeat-password" name="repeat-password" type="password" placeholder="请再次输入密码" />
          </div>

          <div class="u-field">
            <span class="u-checkbox">
              <input type="checkbox" name="remember-me"/>
              <span class="label">下次自动登入</span>
            </span>
          </div>

          <div class="u-field" id="register-action">
            <button class="u-btn u-btn-blue" type="submit">注册</button>
            <a class="btn" href="/login">已有账号，我要登录</a>
          </div>
        </form>
      </div>
    </div>
  </div>
$!{includeJS()}
