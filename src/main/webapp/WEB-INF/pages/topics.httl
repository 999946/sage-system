<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout"])
#set(Collection<BlogPreview> topics)
<head>
  <meta charset="UTF-8">
  <title>{${area}}主题列表</title>
  $!{includeCSS()}
  <style>
    .topic{
      background: #f0f0f0
    }
  </style>
</head>
<body>
$!{include("navbar.httl")}
  <div id="container" class="container">
  #for(topic : topics)
    <div class="topic">
      <a href="/topic/${topic.id}">${topic.title}</a>
      <p>${topic.preview}</p>
      <a>${topic.author.name}</a>
      <span>${topic.createdTime.format("yyyy-MM-dd HH:mm:ss")}</span>
    </div>
  #end
  </div>
</body>
</html>