<!DOCTYPE html>
<html>
<!--
#set(List<TopicPreview> topics)
#set(paginationLinks)
-->
<head>
  <meta charset="UTF-8">
  <title>帖子列表</title>
  $!{allcss}
  <style>
    .btn-write-topic {margin: 10px}
  </style>
</head>
<body>
$!{include("navbar.httl")}
<div id="container" class="container">
  <div class="topic-list">
    <a class="btn-write-topic btn btn-default btn-sm" href="/topics/new">发帖!</a>
    #for(topic : topics)
      $!{include("topic-preview.httl")}
    #end
  </div>
  <div class="pagination">
    $!{paginationLinks}
  </div>
</div>
$!{alljs}
<script>
  setup(humanTime_setup, tag_setup, user_setup)
  $(document).ready(function() {
    $('.summary').warnEmpty().each(function(){
      $(this).html(marked($(this).text()))
    })
  })
</script>
</body>
</html>