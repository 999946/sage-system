<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout", "tag"])
#set(BlogView topic)
<head>
  <meta charset="UTF-8">
  <title>${topic.title}</title>
  $!{includeCSS()}
  <style>
    .topic{
      background: #f0f0f0
    }
  </style>
</head>
<body>
  $!{include("navbar.httl")}
  <div id="container" class="container">
    <div class="topic" topic-id="${topic.id}">
      <h5>${topic.title}</h5>
      <div>${topic.content}</div>
      $!{include("user-label.httl", ["u": topic.author])}
      <span>${humanTime(topic.createdTime)}</span>
      <span>${humanTime(topic.modifiedTime)}</span>
    </div>
  </div>
</body>
</html>