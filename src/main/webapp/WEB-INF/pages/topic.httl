<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout"])
#set(TopicView topic)
<head>
  <meta charset="UTF-8">
  <title>${topic.title}</title>
  $!{includeCSS()}
  <style>
    .topic{
      background: #f0f0f0
    }
  </style>
</head>
<body>
  $!{include("navbar.httl")}
  <div id="container" class="container">
    <div class="topic" topic-id="${topic.id}">
      <h5>${topic.title}</h5>
      <div>${topic.content}</div>
      <span>${topic.author.name}</span>
      <span>${topic.createdTime.format("yyyy-MM-dd HH:mm:ss")}</span>
      <span>${topic.modifiedTime.format("yyyy-MM-dd HH:mm:ss")}</span>
    </div>
  </div>
</body>
</html>