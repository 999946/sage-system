<!DOCTYPE html>
<html>
#set(components = ["bootstrap", "layout", "stream", "tag", "user"])
#set(String intro)
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>公共主页</title>
  $!{includeCSS()}
  <style>
    .side > div, #bkg-intro{padding-bottom: 100px; margin: 2px; border: solid orange 1px}
  </style>
</head>
<body>
$!{include("navbar.httl")}

<div class="container" id="container">
	<div id="chain"></div>
	<div class="row" style="margin-top:50px">
		<div class="side">
     <div>订阅</div>
     <div>核心子标签</div>
     <div>普通子标签</div>
     <div>同名标签</div>
     <div>关联标签</div>
		</div>
		<div class="main">
		  <div id="bkg-intro" class="row" style="text-align:center;padding:10px">${intro == null ? "没有背景介绍" : intro}</div>
			<div class="stream row">
				<div class="slist"></div>
			</div>
		</div>
	</div>
	<div class="footer"></div>
</div>
$!{includeProto}
$!{includeJS()}
<script type="text/javascript">
$(document).ready(function(){
  $('#nav-tags').addClass('active');
  
	var tagId = window.frontMap.id;
	getStream(webroot+'/read/tag/' + tagId).done(function(){addDeleteButtons($('.slist .tweet'));});
	getTagChain(tagId, $('#chain'));
});
</script>
</body>
</html>